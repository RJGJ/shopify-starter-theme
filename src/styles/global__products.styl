.products
  --sidebar_width: 350px
  padding: 70px 0

  &__container
    display: flex
    flex-flow: row wrap

    & ^[0]__sidebar
      flex-basis: var(--sidebar_width)
      padding-right: 20px

    & ^[0]__list-wrap
      flex-basis: calc(100% - var(--sidebar_width))
      
      & ^[0]__list
        display: grid
        gap: 20px
        grid-template-columns: 1fr 1fr 1fr
        
        & ^[0]__item
          border: solid 1px black
          padding: 30px 20px
          display: flex
          flex-direction: column
          height: 100%
          position: relative
          background: white

          &:after
            content: ""
            z-index: -1
            top: 0
            left: 0
            position: absolute
            width: 100%
            height: 100%
            background: black
            transition: 0.2s ease
          
          &:hover:after
            transform: translate(5px, 5px)

          & ^[0]__item-image-wrap
            align-self: center
            & ^[0]__item-image
              max-width: 100%
              object-fit: contain
              transition: 0.2s ease

          &:hover
            & ^[0]__item-image-wrap
              & ^[0]__item-image
                transform: scale(1.05)
        