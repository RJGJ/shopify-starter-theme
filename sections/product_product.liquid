<section class="product">
  <div class="container">
    <div class="gallery">
      {% for image in product.images %}
        {{ image | image_url | img_tag}}
      {% endfor %}
    </div>
    <h1>{{ product.title }} | {{ product.price | money_with_currency }}</h1>
    {% form 'product', product %}
      <input type="submit" value="add to cart"/>
    {% endform %}
    <div class="description">
      {{ product.description }}
    </div>
  </div>
</section>