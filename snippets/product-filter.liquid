<div class="product-filter">
  <div class="product-filter__container">
    <div class="product-filter__search">
      <form class="product-search" x-data="ProductSearch" @submit.prevent="search" >
        <input type="search" name="product search" id="product-search " x-model="search_term" @keyup="search" placeholder="search products">
        {% comment %} <input type="submit" value="search" class="btn" :disabled="!search_term"> {% endcomment %}
        <div class="product-search__results">
          <template x-if="products.length > 0">
            <template x-for="item in products">
              <a class="product-search__result-item" :href="item.url">
                <img :src="item.featured_image.url" :alt="item.featured_image.alt" height="20" width="20">
                <span x-text="item.title"></span>
              </a>
            </template>
          </template>
          <template x-if="products.length <= 0 && !!search_term">
            <div>no results</div>
          </template>
        </div>
      </form>
    </div>
    <div class="product-filter__collection">
      <h5>Collection</h5>
        {% for collection in collections %}
          {% if collection.title != "Home page" %}
            <li>
              <a href="{{ collection.url }}">{{ collection.title }} {%if collection.all_products_count > 0 %}({{ collection.all_products_count }}){% endif %}</a>
            </li>
          {% endif %}
        {% endfor %}
    </div>
    <div class="product-filter__">
      <h5>title</h5>
    </div>
  </div>
</div>